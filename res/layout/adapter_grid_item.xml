<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grid_bg" >
    
    <com.daylab.g2048.ui.ScaleImageView 
        android:id="@+id/scale_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    
	<TextView android:id="@+id/grid_textView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/scale_imageView"
	    android:layout_alignTop="@+id/scale_imageView"
	    android:layout_alignRight="@+id/scale_imageView"
	    android:layout_alignBottom="@+id/scale_imageView"
	    android:gravity="center"
	    android:textColor="#f6f6f6"
	    android:text="2048"
	    android:textSize="22sp"
	    android:textStyle="bold"
	    android:background="@color/c2"/>
</RelativeLayout>
